# MongoDB Configuration Example
# Configure these variables to connect to your MongoDB instance with authentication

# MongoDB Connection with Authentication
MONGODB_URI=mongodb://admin:password123@192.168.31.75:27017/service-orders?authSource=admin

# Alternative MongoDB configurations:

# If your MongoDB has different credentials:
# MONGODB_URI=mongodb://username:password@192.168.31.75:27017/service-orders?authSource=admin

# If your MongoDB is on a different host:
# MONGODB_URI=mongodb://admin:password123@your-mongodb-host:27017/service-orders?authSource=admin

# If your MongoDB uses a different database for authentication:
# MONGODB_URI=mongodb://admin:password123@192.168.31.75:27017/service-orders?authSource=your-auth-db

# If your MongoDB doesn't require authentication (not recommended for production):
# MONGODB_URI=mongodb://192.168.31.75:27017/service-orders

# Application
NODE_ENV=production
PORT=3000

# JWT Authentication
JWT_SECRET=seu_secret_aqui
JWT_EXPIRES_IN=7d

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Redis
REDIS_PASSWORD=your-secure-redis-password

# Security
BCRYPT_ROUNDS=12

# CORS (if needed)
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
