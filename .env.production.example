# Production Environment Variables
# Copy this file to .env.production and update the values

# Application
NODE_ENV=production
PORT=3000

# Database
MONGODB_URI=mongodb://mongodb:27017/service-orders
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-secure-mongodb-password

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters
JWT_EXPIRES_IN=7d

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Redis
REDIS_PASSWORD=your-secure-redis-password

# Security
BCRYPT_ROUNDS=12

# CORS (if needed)
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
